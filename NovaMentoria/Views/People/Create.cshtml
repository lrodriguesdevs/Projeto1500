@model Person

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Person</h4>
<hr />
<div class="row">
    <div class="col-md">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="row">
                <div class="col-md-3">
                    <label asp-for="CircleId" class="control-label"></label>
                    <select asp-for="CircleId" class="form-control" asp-items="ViewBag.CircleId"></select>
                </div>
                <div class="col-md-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Type" class="control-label"></label>
                    <select asp-for="Type" class="form-control">
                        <option value="0">Mentorado</option>
                        <option value="1">Mentor</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="CPF" class="control-label"></label>
                    <input asp-for="CPF" class="form-control" />
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>
          </div>
          <div class="row">
                <div class="col-md-4">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="DateBorn" class="control-label"></label>
                    <input asp-for="DateBorn" class="form-control" />
                    <span asp-validation-for="DateBorn" class="text-danger"></span>
                </div>
                <div class="col-md-8">
                    <label asp-for="NivelStudy" class="control-label"></label>
                    <select asp-for="NivelStudy" class="form-control">
                        <option value="0">EnsinoFundamental Incompleto</option>
                        <option value="1">Ensino Fundamental Completo</option>
                        <option value="2">Ensino Médio Incompleto</option>
                        <option value="3">Ensino Médio Completo</option>
                        <option value="4">Ensino Superior Incompleto</option>
                        <option value="5">Ensino Supeiror Completo</option>
                    </select>
                    <span asp-validation-for="NivelStudy" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="University" class="control-label"></label>
                    <input asp-for="University" class="form-control" />
                    <span asp-validation-for="University" class="text-danger"></span>
                </div>

          </div>
          <div class="row">
                <div class="col-md-4">
                <label asp-for="GraduateDate" class="control-label"></label>
                <input asp-for="GraduateDate" class="form-control" />
                <span asp-validation-for="GraduateDate" class="text-danger"></span>
            </div>
                <div class="col-md-4">
                <label asp-for="Enterprise" class="control-label"></label>
                <input asp-for="Enterprise" class="form-control" />
                <span asp-validation-for="Enterprise" class="text-danger"></span>
            </div>
                <div class="col-md-4">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
          </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Recommendation" /> @Html.DisplayNameFor(model => model.Recommendation)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsStudying" /> @Html.DisplayNameFor(model => model.IsStudying)
                </label>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
